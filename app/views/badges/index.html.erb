<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2">
      <div class="ui-card ">
        <div class="total-badges-list">

          <h4 class="mt-2">Bad badges</h4>
          <div class="badges-container">
            <% @bad_badges.each do |badge| %>
              <%= render 'shared/badge', badge: badge, gray_filter: !current_user.badges.include?(badge) %>
              <%= render 'shared/badge_infowindow', badge: badge %>
            <% end %>
          </div>



          <h4 class="mt-2">Good badges</h4>
          <div class="badges-container">
            <% @good_badges.each do |badge| %>
              <%= render 'shared/badge', badge: badge, gray_filter: !current_user.badges.include?(badge)  %>
              <%= render 'shared/badge_infowindow', badge: badge %>
            <% end %>
          </div>



          <h4 class="mt-2">Legendary badges</h4>
          <div class="badges-container">
            <% @legendary_badges.each do |badge| %>
              <%= render 'shared/badge', badge: badge, gray_filter: !current_user.badges.include?(badge)  %>
              <%= render 'shared/badge_infowindow', badge: badge %>
            <% end %>
          </div>

        </div>

      </div>
    </div>
  </div>
</div>
